<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorPrimary"
    tools:context="com.calculator.calculator.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="0.7"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:weightSum="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1"
                android:layout_weight="1">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/ex_input"
                    android:layout_weight="1"
                    android:textSize="36dp"
                    android:contextClickable="false"
                    android:cursorVisible="false"
                    android:gravity="bottom|end"
                    android:background="@drawable/white_bg"
                    android:allowUndo="true"
                    android:inputType="textMultiLine"
                    android:clickable="false"
                    android:elegantTextHeight="true"
                    android:textStyle="normal|italic"
                    android:singleLine="false"
                    android:maxLines="4"
                    android:editable="false"
                    android:lines="3" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_weight="0.1"
            android:layout_gravity="center_horizontal">

            <Button
                android:text="@string/app_allclear"
                android:layout_height="match_parent"
                android:id="@+id/btn_allclear"
                android:layout_weight="0.25"
                android:layout_width="wrap_content"
                android:width="@dimen/activity_horizontal_margin"
                android:background="@drawable/white_selector"
                android:textAlignment="center"
                android:textSize="@dimen/activity_horizontal_margin"
                android:layout_margin="2dp" />

            <Button
                android:text="@string/app_clear"
                android:layout_height="match_parent"
                android:id="@+id/btn_del"
                android:layout_weight="0.25"
                android:layout_width="wrap_content"
                android:width="@dimen/activity_horizontal_margin"
                android:background="@drawable/white_selector"
                android:textAlignment="center"
                android:textSize="@dimen/activity_horizontal_margin"
                android:layout_margin="2dp" />

            <Button
                android:text="@string/app_divide"
                android:layout_height="match_parent"
                android:id="@+id/btn_divide"
                android:layout_weight="0.25"
                android:layout_width="wrap_content"
                android:width="@dimen/activity_horizontal_margin"
                android:background="@drawable/white_selector"
                android:textAlignment="center"
                android:textSize="@dimen/activity_horizontal_margin"
                android:layout_margin="2dp" />

            <Button
                android:text="@string/app_multiply"
                android:id="@+id/btn_mul"
                android:layout_weight="0.25"
                android:layout_height="match_parent"
                android:width="@dimen/activity_horizontal_margin"
                android:textAlignment="center"
                android:background="@drawable/white_selector"
                android:textSize="@dimen/activity_horizontal_margin"
                android:layout_width="wrap_content"
                android:layout_margin="2dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_weight="0.1"
            android:layout_gravity="center_horizontal">

            <Button
                android:text="7"
                android:layout_height="match_parent"
                android:id="@+id/btn_7"
                android:layout_weight="0.25"
                android:layout_width="wrap_content"
                android:width="@dimen/activity_horizontal_margin"
                android:background="@drawable/white_selector"
                android:textAlignment="center"
                android:textSize="@dimen/activity_horizontal_margin"
                android:layout_margin="2dp" />

            <Button
                android:text="8"
                android:layout_height="match_parent"
                android:id="@+id/btn_8"
                android:layout_weight="0.25"
                android:layout_width="wrap_content"
                android:width="@dimen/activity_horizontal_margin"
                android:background="@drawable/white_selector"
                android:textAlignment="center"
                android:textSize="@dimen/activity_horizontal_margin"
                android:layout_margin="2dp" />

            <Button
                android:text="9"
                android:layout_height="match_parent"
                android:id="@+id/btn_9"
                android:layout_weight="0.25"
                android:layout_width="wrap_content"
                android:width="@dimen/activity_horizontal_margin"
                android:background="@drawable/white_selector"
                android:textAlignment="center"
                android:textSize="@dimen/activity_horizontal_margin"
                android:layout_margin="2dp" />

            <Button
                android:text="@string/app_subtract"
                android:layout_height="match_parent"
                android:id="@+id/btn_sub"
                android:layout_weight="0.25"
                android:layout_width="wrap_content"
                android:width="@dimen/activity_horizontal_margin"
                android:background="@drawable/white_selector"
                android:textAlignment="center"
                android:textSize="@dimen/activity_horizontal_margin"
                android:layout_margin="2dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_weight="0.1">

            <Button
                android:text="4"
                android:layout_height="match_parent"
                android:id="@+id/btn_4"
                android:layout_weight="0.25"
                android:layout_width="wrap_content"
                android:width="@dimen/activity_horizontal_margin"
                android:background="@drawable/white_selector"
                android:textAlignment="center"
                android:textSize="@dimen/activity_horizontal_margin"
                android:layout_margin="2dp" />

            <Button
                android:text="5"
                android:layout_height="match_parent"
                android:id="@+id/btn_5"
                android:layout_weight="0.25"
                android:layout_width="wrap_content"
                android:width="@dimen/activity_horizontal_margin"
                android:background="@drawable/white_selector"
                android:textAlignment="center"
                android:textSize="@dimen/activity_horizontal_margin"
                android:layout_margin="2dp" />

            <Button
                android:text="6"
                android:layout_height="match_parent"
                android:id="@+id/btn_6"
                android:layout_weight="0.25"
                android:layout_width="wrap_content"
                android:width="@dimen/activity_horizontal_margin"
                android:background="@drawable/white_selector"
                android:textAlignment="center"
                android:textSize="@dimen/activity_horizontal_margin"
                android:layout_margin="2dp" />

            <Button
                android:text="@string/app_plus"
                android:layout_height="match_parent"
                android:id="@+id/btn_plus"
                android:layout_weight="0.25"
                android:layout_width="wrap_content"
                android:width="@dimen/activity_horizontal_margin"
                android:background="@drawable/white_selector"
                android:textAlignment="center"
                android:textSize="@dimen/activity_horizontal_margin"
                android:layout_margin="2dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="0.2"
            android:weightSum="4">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="3"
                android:weightSum="2">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="3"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal">

                    <Button
                        android:text="1"
                        android:layout_height="match_parent"
                        android:id="@+id/btn_1"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:width="@dimen/activity_horizontal_margin"
                        android:background="@drawable/white_selector"
                        android:textAlignment="center"
                        android:textSize="@dimen/activity_horizontal_margin"
                        android:layout_margin="2dp" />

                    <Button
                        android:text="2"
                        android:layout_height="match_parent"
                        android:id="@+id/btn_2"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:width="@dimen/activity_horizontal_margin"
                        android:background="@drawable/white_selector"
                        android:textAlignment="center"
                        android:textSize="@dimen/activity_horizontal_margin"
                        android:layout_margin="2dp" />

                    <Button
                        android:text="3"
                        android:layout_height="match_parent"
                        android:id="@+id/btn_3"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:width="@dimen/activity_horizontal_margin"
                        android:background="@drawable/white_selector"
                        android:textAlignment="center"
                        android:textSize="@dimen/activity_horizontal_margin"
                        android:layout_margin="2dp" />


                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="3"
                    android:layout_weight="1">

                    <Button
                        android:text="0"
                        android:layout_height="match_parent"
                        android:id="@+id/btn_0"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:background="@drawable/white_selector"
                        android:textAlignment="center"
                        android:textSize="@dimen/activity_horizontal_margin"
                        android:width="@dimen/activity_horizontal_margin"
                        android:layout_margin="2dp" />

                    <Button
                        android:text="."
                        android:layout_height="match_parent"
                        android:id="@+id/btn_point"
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:background="@drawable/white_selector"
                        android:textAlignment="center"
                        android:textSize="@dimen/activity_horizontal_margin"
                        android:width="@dimen/activity_horizontal_margin"
                        android:layout_margin="2dp" />


                </LinearLayout>
            </LinearLayout>
            <Button
                android:text="@string/app_equal"
                android:layout_height="match_parent"
                android:id="@+id/btn_equal"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:width="@dimen/activity_horizontal_margin"
                android:background="@drawable/orange_selector"
                android:textAlignment="center"
                android:textSize="@dimen/activity_horizontal_margin"
                android:layout_margin="2dp" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
