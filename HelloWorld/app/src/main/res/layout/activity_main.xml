<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.helloworld.helloworld.MainActivity"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:text="AC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/button2" />

        <Button
            android:text="%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="47dp"
            android:id="@+id/button11" />

        <Button
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button20"
            android:layout_alignBaseline="@+id/button11"
            android:layout_alignBottom="@+id/button11"
            android:layout_toRightOf="@+id/button2"
            android:layout_toEndOf="@+id/button2" />

        <Button
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button21"
            android:layout_alignBaseline="@+id/button12"
            android:layout_alignBottom="@+id/button12"
            android:layout_toRightOf="@+id/button11"
            android:layout_toEndOf="@+id/button11" />

        <Button
            android:text="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button13"
            android:layout_above="@+id/button12"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:text="7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button14"
            android:layout_above="@+id/button13"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:text="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button22"
            android:layout_alignBaseline="@+id/button13"
            android:layout_alignBottom="@+id/button13"
            android:layout_toRightOf="@+id/button13"
            android:layout_toEndOf="@+id/button13" />

        <Button
            android:text="8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button23"
            android:layout_above="@+id/button22"
            android:layout_toRightOf="@+id/button13"
            android:layout_toEndOf="@+id/button13" />

        <Button
            android:text="9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button24"
            android:layout_alignBaseline="@+id/button23"
            android:layout_alignBottom="@+id/button23"
            android:layout_toRightOf="@+id/button23"
            android:layout_toEndOf="@+id/button23" />

        <Button
            android:text="6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button25"
            android:layout_alignBaseline="@+id/button22"
            android:layout_alignBottom="@+id/button22"
            android:layout_toRightOf="@+id/button22"
            android:layout_toEndOf="@+id/button22" />

        <Button
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button26"
            android:layout_alignBaseline="@+id/button21"
            android:layout_alignBottom="@+id/button21"
            android:layout_toRightOf="@+id/button21"
            android:layout_toEndOf="@+id/button21" />

        <Button
            android:text="@string/app_subtract"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button30"
            android:layout_alignBaseline="@+id/button26"
            android:layout_alignBottom="@+id/button29"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/button26"/>

        <Button
            android:text="@string/app_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/button27"
            android:layout_alignBottom="@+id/button30"
            android:layout_toRightOf="@+id/button26"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/button26"
            android:id="@+id/button31" />

        <Button
            android:text="@string/app_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/button32" />

        <Button
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button12"
            android:layout_above="@+id/button11"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:text="@string/app_equal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button19"
            android:layout_alignTop="@+id/button2"
            android:layout_toLeftOf="@id/button32"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_alignLeft="@id/button20" />

        <Button
            android:text="."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button27"
            android:layout_below="@+id/button26"
            android:layout_toRightOf="@+id/button20"
            android:layout_toEndOf="@+id/button20" />


        <Button
            android:text="@string/app_divide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button28"
            android:layout_alignBaseline="@+id/button24"
            android:layout_alignBottom="@+id/editText2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/button24"/>

        <Button
            android:text="@string/app_multiply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button29"
            android:layout_alignBaseline="@+id/button25"
            android:layout_alignBottom="@+id/button28"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/button25"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"
            android:ems="10"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_above="@id/button14"
            android:id="@+id/editText2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textView2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_above="@+id/editText2"
            android:text="@string/app_textview1" />

    </RelativeLayout>

</RelativeLayout>
